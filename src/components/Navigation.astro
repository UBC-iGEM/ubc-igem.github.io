  </div>
  <button id="navigation-menu-button" aria-label="Toggle navigation menu" aria-expanded="false">☰</button>
</nav>

<script>
  const menu = document.getElementById('navigation-menu')
  const menuButton = document.getElementById('navigation-menu-button')

  if (menu instanceof HTMLElement && menuButton instanceof HTMLButtonElement) {
    menuButton.addEventListener('click', () => {
      menu.classList.toggle('open')
      menuButton.classList.toggle('open')

      const isOpen = menuButton.classList.contains('open')
      menuButton.textContent = isOpen ? '×' : '☰'
      menuButton.setAttribute('aria-expanded', String(isOpen))
    })
  }
</script>

