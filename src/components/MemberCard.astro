---
interface Props {
  name: string;
  role: string;
  major: string;
  image: string;
  colorToken: string;
}

const { name, role, major, image, colorToken } = Astro.props
---

<div class="member-card" style=`background-color: var(${colorToken})`>
  <img src={`/team-photos/${image}`} alt={name} draggable="false" />
  <hr />
  <div class="info">
    <p class="name">{name}</p>
    <p class="role">{role}</p>
    <p class="major">{major}</p>
  </div>
</div>

<style>
  .member-card {
    display: flex;
    flex-direction: column;
    width: 180px;
    height: 290px;
    margin: 0.5rem;
    background-color: var(--card-color);
    border: var(--black-border);
    border-radius: var(--border-radius-sm);
  }

  img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    border-radius: calc(var(--border-radius-sm) * 0.5) calc(var(--border-radius-sm) * 0.5) 0 0;
  }

  hr {
    margin: 0;
    border: calc(var(--border-width) / 2) solid var(--border-color);
  }

  p {
    margin: 0;
    font-family: var(--font-family-open-sans);
    color: var(--secondary-text-color);
    font-size: 0.85rem;
    line-height: 1.4;
  }

  .info {
    padding: 0.25rem 0.35rem;
  }

  .name {
    font-weight: bold;
    text-transform: uppercase;
  }

  .role {
    font-weight: 600;
    font-style: italic;
  }
</style>
