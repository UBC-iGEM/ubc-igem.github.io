---
interface Props {
  name: string;
  role: string;
  major: string;
  image: string;
  colorToken: string;
}

const { name, role, major, image, colorToken } = Astro.props
---

<div class="member-card" style=`background-color: var(${colorToken})`>
  <img src={`/team-photos/${image}`} alt={name} draggable="false" />
  <hr />
  <div class="info">
    <p class="name">{name.toUpperCase()}</p>
    <p class="role">{role}</p>
    <p class="major">{major}</p>
  </div>
</div>

<style>
  .member-card {
    display: flex;
    flex-direction: column;
    width: 180px;
    height: 280px;
    margin: 10px;
    background-color: var(--card-color);
    border: var(--border-width) solid black;
    border-radius: var(--border-radius-sm);
  }

  img {
    width: 100%;
    height: 180px;
    object-fit: cover;
    border-radius: calc(var(--border-radius-sm) * 0.5) calc(var(--border-radius-sm) * 0.5) 0 0;
  }

  hr {
    margin: 0;
    border: 1px solid black;
  }

  p {
    margin: 0;
    font-family: 'Open Sans', sans-serif;
    color: var(--secondary-text-color);
    font-size: 14px;
    line-height: 1.4;
  }

  .info {
    padding: 4px 6px;
  }

  .name {
    font-weight: bold;
  }

  .role {
    font-weight: 600;
    font-style: italic;
  }
</style>
