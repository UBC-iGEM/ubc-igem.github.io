---
import Navigation from '../components/Navigation.astro'

interface Props {
	title?: string;
}

const { title = 'UBC iGEM' } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
		<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet" />
	</head>
	<body>
		<Navigation />
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--color-primary-black: #042a2b;
		--color-primary-green: #afdbbf;
		--color-primary-orange: #ffdab9;
		--color-primary-purple: #babcd5;
		--color-primary-yellow: #fbf8dd;
		--color-primary-peach: #f7dfca;

		--color-secondary-black: #373f57;
		--color-secondary-green: #d8f0e2;
		--color-secondary-orange: #fff0e2;
		--color-secondary-purple: #e4e6fc;
		--color-secondary-yellow: #fffef3;
		--color-secondary-peach: #fdf2e9;

		--background-color: #ffffff;
		--text-color-primary: var(--color-primary-black);
		--text-color-secondary: var(--color-secondary-black);
		--border-color: var(--color-primary-black);

		--max-width: 1440px;
		--border-radius-sm: 5px;
		--border-radius-md: 10px;
	}

	body {
		display: flex;
		flex-direction: column;
		width: 100%;
		height: 100%;
		padding: 0;
		margin: 0;
		font-family: 'Poppins', sans-serif;
		color: var(--text-color-primary);
		box-sizing: border-box;
		scroll-behavior: smooth;
	}

	a {
		display: flex;
		color: inherit;
		text-decoration: none;
		align-items: center;
	}
</style>
