---
import Navigation from '../components/Navigation.astro'
import Footer from '../components/Footer.astro'
import HiringBanner from '../components/HiringBanner.astro'

interface Props {
	title: string;
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
		<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet" />
	</head>
	<body>
    <HiringBanner />
		<Navigation />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		--color-primary-black: #042a2b;
		--color-primary-yellow: #fbf8dd;
		--color-primary-green: #afdbbf;
		--color-primary-orange: #ffdab9;
		--color-primary-purple: #babcd5;
		--color-primary-red: #fbe1dd;
		--color-primary-blue: #c9d8ef;
		--color-primary-peach: #f7dfca;

		--color-secondary-black: #373f57;
		--color-secondary-yellow: #fffef3;
		--color-secondary-green: #d8f0e2;
		--color-secondary-orange: #fff0e2;
		--color-secondary-purple: #e4e6fc;
    --color-secondary-red: #fff6f5; /* used in how we work pg */
		--color-secondary-blue: #ebf3fe;
		--color-secondary-peach: #fdf2e9;

		--color-tertiary-green: #1b8043;
    --color-alert-red: #ba4943;

		--background-color: #ffffff;
		--text-color-primary: var(--color-primary-black);
		--text-color-secondary: var(--color-secondary-black);
		--border-color: var(--color-primary-black);

		--font-family-poppins: 'Poppins', sans-serif;
		--font-family-open-sans: 'Open Sans', sans-serif;

		--page-inline-inset: 10%;
		--max-width: 1440px;
		--border-width: 2px;
		--border-radius-sm: 5px;
		--border-radius-md: 10px;
		--black-border: var(--border-width) solid var(--border-color);
	}

	* {
		box-sizing: border-box;
		scroll-behavior: smooth;
	}

	body {
		display: flex;
		padding: 0;
		margin: 0;
		font-family: var(--font-family-poppins);
		color: var(--text-color-primary);
		justify-content: center;
		flex-direction:column;
	}

	a {
		display: flex;
		color: inherit;
		text-decoration: none;
		align-items: center;
	}

	.page-title {
		font-size: clamp(3rem, 15vw, 4.5rem);
		font-weight: bold;
		margin: 5rem var(--page-inline-inset) 2rem;
	}

	.page-subtitle {
		font-size: clamp(1rem, 6.5vw, 2rem);
		line-height: 1.2;
		margin: 0 var(--page-inline-inset) 3rem;
	}

	.timeline {
		padding-right: var(--page-inline-inset);
		border-top: var(--black-border);
	}

	.timeline-spacer {
		display: none;
		width: auto;
		height: 8rem;
		margin-left: 5rem;
		border-left: var(--black-border);
	}

	@media (max-width: 1000px) {
		body {
			justify-content: start;
		}

		.timeline {
			padding-left: var(--page-inline-inset);
		}

		.timeline-spacer {
			display: block;
			margin-left: calc(var(--page-inline-inset) + 5rem);
		}
	}
</style>
