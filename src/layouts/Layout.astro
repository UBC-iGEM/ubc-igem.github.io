---
import Navigation from "../components/Navigation.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Navigation />
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --color-primary-black: #042a2b;
    --color-primary-green: #afdbbf;
    --color-primary-orange: #ffdab9;
    --color-primary-purple: #babcd5;
    --color-primary-yellow: #fbf8dd;
    --color-primary-peach: #f7dfca;

    --color-secondary-black: #373f57;
    --color-secondary-green: #d8f0e2;
    --color-secondary-orange: #fff0e2;
    --color-secondary-purple: #e4e6fc;
    --color-secondary-yellow: #fffef3;
    --color-secondary-peach: #fdf2e9;

    --color-tertiary-green: #479162;

    --background-color: #ffffff;
    --text-color-primary: var(--color-primary-black);
    --text-color-secondary: var(--color-secondary-black);
    --border-color: var(--color-primary-black);

    --max-width: 1440px;
    --border-width: 2px;
    --border-radius-sm: 5px;
    --border-radius-md: 10px;
  }

  * {
    box-sizing: border-box;
    scroll-behavior: smooth;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: "Poppins", sans-serif;
    color: var(--text-color);
    background-color: var(--background-color);
    line-height: 1.6;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    line-height: 1.2;
  }

  h1 {
    font-size: 4.68rem;
    font-weight: 700;
  }

  h2 {
    font-size: 1.87rem;
    font-weight: 500;
  }

  h3 {
    font-size: 1.5625rem;
    font-weight: 500;
  }

  a {
    color: inherit;
    text-decoration: none;
  }

  .title {
    font-size: 4.5rem;
    font-weight: bold;
    margin-top: 80px 0 0 0;
  }

  .subtitle {
    font-size: 2rem;
    line-height: 1.2;
    margin-bottom: 50px;
  }
</style>
