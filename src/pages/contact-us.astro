---
import Layout from "../layouts/Layout.astro";
import { Content as FaqContent } from "../content/faq.md";

const pageTitle = "Contact Us - UBC iGEM";
---

<Layout title={pageTitle}>
  <section class="contact-section">
    <h1>Contact us</h1>

    <div class="contact-row">
      <img src="/email.svg" alt="Email Icon" />
      <a href="mailto:contact@ubcigem.com">
        <h2>contact@ubcigem.com</h2>
      </a>
    </div>
    <div class="contact-row">
      <img src="/instagram.svg" alt="Instagram Icon" />
      <a href="https://www.instagram.com/ubcigem/?hl=en" target="_blank" rel="noopener noreferrer">
        <h2>@ubcigem</h2>
      </a>
    </div>
    <div class="contact-row">
      <img src="/linkedin.svg" alt="LinkedIn Icon" />
      <a href="https://www.linkedin.com/company/ubcvigem/posts/?feedView=all" target="_blank" rel="noopener noreferrer">
        <h2>UBC iGEM</h2>
      </a>
    </div>
  </section>
  <section class="faq-section">
    <h1 class="faq-heading">FAQ</h1>
    <FaqContent />
  </section>

  <style>
    h1 {
      font-size: 4.5em;
      font-weight: 900;
      margin-top: 0.5em;
      margin-bottom: 0.5em;
    }

    h2 {
      font-size: 1.5em;
      font-weight: 400;
      margin-top: 0.5em;
      margin-bottom: 0.5em;
      word-wrap: anywhere;
    }

    p {
      font-size: 1.3em;
      margin-top: 0.5em;
      margin-bottom: 0.25em;
      font-weight: 700;
    }

    .contact-section {
      background-color: var(--color-primary-green);
      padding-block: 5%;
      padding-inline: 10%;
      text-align: left;
      border-bottom: var(--black-border);
      outline: var(--border-color);
      max-width: 100%;
    }

    .contact-row {
      display: flex;
      align-items: center;
    }

    .contact-row img {
      width: 48px;
      height: 48px;
      flex-shrink: 0;
      margin-right: 12px;
    }

    .contact-row a {
      text-decoration: none;
      color: inherit;
    }

    .faq-section {
      padding-inline: 10%;
      border-bottom: var(--black-border);
      text-align: left;
      max-width: 100%;

      h2 {
        font-size: 2.25em;
        font-weight: 900;
        margin-bottom: 0.1em;
        margin-top: 0.1em;
      }

      p {
        font-size: 1.3em;
        margin-bottom: 1em;
        margin-top: 0.5em;
      } 
    }
  </style>
</Layout>
